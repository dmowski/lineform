.small-news
	width 30%
	margin 1.6%
	text-align center
	float left
	display block
	padding-bottom 45px
	cursor pointer
	@media $tablet
		width 95%

	&__admin-link
		width 100%
		float left

	&__text
		font-size 14px
		font-weight 300
		padding 0px 0
		margin 5px 25px

	&:hover
		& .small-news__title
			color $color_main

	&__date
	&__title
		font-weight 400
		margin 0
		padding 0px 0
		text-transform uppercase;
		transition all .25s ease;
		letter-spacing 1px

	&__title
		font-size 18px
		font-weight 500
		margin-bottom 10px

	&__date
		color #999
		font-size 11px
		margin-bottom 4px

	&__img-container 
		height 550px;
		overflow hidden
		margin-bottom 15px
		position relative
		@media $desktop-tablet
			height 300px

	&__img
		height 100%
		position absolute
		left 0
		top 0
		bottom 0
		right 0
		margin auto
		@media $tablet
			height auto
			width 100%

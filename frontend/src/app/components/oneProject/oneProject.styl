.additional-info
	padding 40px 120px
	border-top 1px solid #444
	float left
	width 100%
	margin-top 30px
	&__link
		margin-right 30px
		text-transform none
		font-weight 500
		float left

.one-project
	padding-bottom 100px
	.grid-container-control
		box-shadow 0 0 1px black
		overflow auto
		padding 30px 0
		margin 30px 0
		& .control
			margin-left: 8px;
			display: inherit;
			margin-top: 5px;
			margin-bottom: -30px;
			position: relative;
			z-index: 2;
			& + .control
				margin-left: 200px

	&__content div
		overflow auto
	&__page-date
	&__page-title
	&__content p
	&__content img
	&__content .control
		margin-top 10px
		margin-bottom 20px
		width 1000px
		margin-left calc(50% - 500px)
		@media $desktop-tablet
			width 95%
			margin-left 2%
		@media $mobile
			width 95%
			margin-left 2%


	&__content .control
		cursor pointer
		width 150px
		color: #fff;
		background-color: #2BBBAD;
		padding: 3px 7px 3px 7px;
		font-weight 500
		margin-top 0
		margin-bottom 0
		text-transform uppercase
		font-size 11px
		border-radius: 2px;
		box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.16), 0 2px 5px 0 rgba(0, 0, 0, 0.12);
		&.remove_img
			background-color: #E53935
		&:hover
			box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.3), 0 2px 15px 0 rgba(0, 0, 0, 0.2);
		&:before
			content: '+ '

	&__content .control + .control
		margin-left 10px

	&__content
		h1
		h2
		h3
		h4
		h5
		h6
			margin-top 10px
			margin-bottom 20px
			width 1000px
			margin-left calc(50% - 500px)
			font-size 29px
			font-weight 600
			margin-top 40px

			@media $desktop-tablet
				width 95%
				margin-left 2%
			@media $mobile
				width 95%
				margin-left 2%

	&__page-title
		font-size 42px
		font-weight 600
		border-bottom 1px solid #c2c2c2
		margin-bottom 50px
		margin-top 0px

	&__page-date
		margin-bottom 0px
		color $color_main
		margin-top 100px
		font-size 14px

	&__content p
		font-weight 300
		line-height 28px

	img.half
		margin-bottom -7px
		width calc(50% - 3px)
		float left
		margin-left 3px

	.grid-part
		width: 50%
		overflow hidden
		min-height 300px
		float left
		@media $desktop-tablet
			width 100%
		@media $mobile
			width 100%
		img
			margin 2px 3px !important
			width 100% !important
		
	img.full
		width 100%
		margin-left 0%
	
	&__content img
		min-height: 400px;
		background-color: rgba(0,0,0,.05);
		background-image: url('/img/no_image2.png');
		background-size: auto 100px;
		background-position: center;
		background-repeat: no-repeat;
		@media $desktop-tablet
			width 100%
			margin-left 0
			min-height auto
		@media $mobile
			min-height auto
			width 100% !important
			margin 20px 0 !important
		@media $mobile-sm
			min-height auto
			width 100% !important
			margin 20px 0 !important

.footer
	width 100%
	height 250px
	display block
	position relative
	overflow hidden
	background-color #303030
	color white
	padding 20px 120px
	position relative
	@media $desktop-tablet
		padding 20px 20px
		height auto
	@media $mobile
		padding 20px 20px
		height auto

	&__half
		width 49%
		float left
		overflow hidden
		@media $tablet
			width 90%
		@media $mobile
			width 90%

	&__logo
		float left
		padding-bottom 100px
		font-weight 400
		font-size 12px
		clear right
		@media $tablet
			padding-bottom 0px
		@media $mobile
			padding-bottom 0px
		span
			font-size 14px !important
		img
			width 90px
			height 25px
		
	&__contacts-link
		position absolute
		left -10px
		font-size 12px
		top 134px
		color white
		transform rotate(-90deg)
	
	&__phones
	&__copy
		padding-bottom 20px
		width 400px
		clear right

	&__phones span
		margin-left 10px

	&__soc
		float left
		clear left
		height 100px
		width 400px

	&__vk
	&__fb
	&__in
	&__bh
		background-size 20px
		background-position center
		background-repeat no-repeat
		width 40px
		height 40px
		margin-right:10px
		float left

	&__vk
		background-image url('./assets/img/soc/vk.svg')

	&__fb
		background-image url('./assets/img/soc/fb.svg')
		
	&__in
		background-image url('./assets/img/soc/instagram.svg')

	&__bh
		background-image url('./assets/img/soc/behance.svg')

	&__phones
		padding-bottom 100px
		padding-top 15px

	&__phone
		font-size 11px
		text-transform: uppercase
		margin 0 0 5px 0

	&__copy-line
		width 400px
		

	 &__copy-line
		 margin 0
		 font-size 12px

	&__phones
	&__copy
		float right
		
		@media $tablet
			float left
		@media $mobile
			float left
			font-size 12px

.project-first-scren
	width 100%
	height 100%
	min-height 850px
	display block
	position relative
	overflow hidden
	background-color #000
	z-index 5
	margin-bottom 40px

	&__close
		position absolute
		top 10px
		right 10px
		background transparent url('./assets/img/cross-out.png') center center no-repeat
		background-size 40px
		width 100px
		height 100px
		z-index 99
		opacity 0.6
		transition all .25s
		@media $mobile
			width 35px
			height 35px
			top 5px
			right 5px
		
		&:hover
			opacity 1

	&__container
		height 260px
		padding 0 0
		position absolute
		bottom 0
		left 100px
		right 0
		margin auto
		overflow hidden
		z-index 2
		color white
		@media $desktop-tablet
			left 20px
		@media $tablet
			bottom auto
			top 50px
		@media $mobile
			left 20px
			bottom auto
			top 50px

	&__down
		display block
		position absolute
		bottom 10px
		left 0
		right 0
		margin auto
		width 100px
		height 100px
		background transparent url('./assets/img/arrow-down-sign-to-navigate.png') center center no-repeat
		background-size 40px
		z-index 2

	&__bg-img
		position absolute
		right 0 
		left 0 
		top 0
		bottom 0
		margin auto
		min-width 100%
		min-height 100%
		z-index 0
		opacity 0.65

	&__info
		font-size 18px
		padding 0
		margin 0
		font-weight 500
		padding-left 2px
		color rgba(#e9e9e9, 0.9)

	&__title
		text-shadow 1px 1px 0 rgba(black, 0.2)
		text-transform uppercase
		color #e7e7e7
		line-height 1em
		font-size 42px
		padding 0 0 5px 0
		margin 0
		font-weight 700
		letter-spacing 1px

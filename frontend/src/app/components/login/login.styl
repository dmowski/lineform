.login
	width 100%
	height 100%
	position fixed
	top 0
	left 0
	background-color white

	.button
		width 100%
		max-width 100%
		margin-top 30px
		cursor pointer

	label
		width 100%
		display block
		height 70px

	input
		width 100%
		display block
		padding 3px

	&__container
		padding 40px
		width 500px
		height 500px
		display block
		position fixed
		top calc(50% - 250px)
		left calc(50% - 250px)
		background-color #c9c9c9

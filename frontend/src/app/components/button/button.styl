.button
	background white
	color #333
	border 1px solid #333
	padding 10px 20px
	text-transform uppercase
	font-size 14px
	display block
	max-width 300px
	text-align center
	cursor pointer
	&[hidden]
		display none !important
	
	&:hover
		background #c8c8c8
	&:focus
	&:active
		outline none

	&--center
		margin 0 auto

	&--simple
		background transparent
		color $color_main

.project-sub-info
	min-height 190px
	width 100%
	position absolute
	left 0 
	bottom 0
	z-index 9
	padding-left 100px
	color white
	@media $desktop-tablet
		padding-left 20px
		height 140px
		min-height 140px
		overflow hidden

	@media $tablet
		height auto
		min-height auto
		bottom auto
		top 200px
	@media $mobile
		padding-left 20px
		height 140px
		min-height 140px
		overflow hidden
		height auto
		min-height auto
		bottom auto
		top 200px

	&--title
		color #f9f9f9
		text-transform uppercase
		padding  0 0 3px 0 
		margin 0
		font-weight 400
		font-size 12px       

	&--item
		color #f9f9f9
		padding 0px 0
		margin 0
		font-size 12px
		font-weight 300

	&--block
		padding 15px 20px 15px 0px
		min-height 120px
		float left
		width 280px
		@media $desktop
			width 220px
		@media $tablet
			width 90%
		@media $mobile
			width 90%

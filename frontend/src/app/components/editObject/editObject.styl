.edit-project
	padding 40px 20px 80px 20px
	overflow hidden
	&__edit-text-mode
		position fixed
		height 80%
		width 100%
		left 10px
		top 40px
		z-index 99
		background white
		.button
			max-width: 1000px;
		textarea
			width 100%
			height calc(100% - 300px)

	&__page-title
		font-size 32px
		
	&__tabs
		width 100%
		border-bottom 1px solid #222
		overflow auto
		position fixed
		top 0
		left 0
		background white
		padding-left 300px
		z-index 99999
		text-align center

	&__main
		width 70%
		border-right 1px solid #333
		float left
		min-height 2000px

	&__not-main
		width 30%
		overflow hidden
		float left

	&__save-or-update-btn
		position fixed
		bottom 40px
		right 40px
		width 60px
		height 60px
		border-radius 40px
		z-index 9999
		color white
		font-size 32px
		font-weight 500
		text-align center
		line-height 55px
		background-color $color_main
		box-shadow 2px 2px 1px rgba(black, 0.2)

	&__tab
		display inline-block
		padding 10px 20px
		box-shadow 0 0 0 1px $color_main
		&--right
			float right
		&--active
			background rgba($color_main, 0.9)
			color white
			botder-bottom 2px solid #fff

.edit-form
	padding 0 30px 0 0
	&__text
		height 700px

	&__label
		margin-top 30px

	*
		padding 4px
		width 100%
	input[type=checkbox]
		width auto
		

.help-data
	border-bottom 1px solid #222
	padding 20px 0 30px 0
	.small-project
		width 90% !important
		margin-left 5%
		pointer-events none
	.small-project__img-container
		background-color rgba(black, 0.05)
	
	&__delete-block
		float right
		padding 3px 7px
		background $color_main
		color white

	&__title-block
		font-weight 900

	&__title-block
	&__line-block
		width 90%
		margin-left 5%
		margin-top 5px
		padding 3px

	&__title
		max-width 90%
		margin-left 5%
		margin-top 10px

	&__title
		font-size 18px
		font-weight 600

	button
	.button
		max-width 100%
		width 90%
		margin-left 5%
		margin-top 30px




@keyframes scale-bg{
	0%{
		transform: scale(1.1);
	}
	100%{
		transform: scale(1);
	}
}


@keyframes opacity-link{
	0%{
		opacity 0
	}
	100%{
		opacity 1
	}
}	

.start-page__link
	opacity 0

.start-page--loaded .start-page__link
	opacity 1
	animation-name: opacity-link
	animation-duration: 2s;
	animation-delay: 0s;


.start-page
	width 100%
	height 100%
	min-height 750px
	display block
	position relative
	overflow hidden
	cursor pointer
	z-index 5
	background-color white

	@media $mobile
		min-height 350px

	&__bg
		display block
		width 100%
		height 100%
		position absolute
		z-index 0
		background-color rgba(black, 0.4)
		pointer-events none

	&__container
		height 280px
		position absolute
		top 0
		bottom 0
		left 0 
		right 0
		margin auto
		overflow hidden
		z-index 2
		@media $desktop-tablet
			width: 100% !important
		@media $mobile
			width: 100% !important
			bottom auto
			top 0px
			padding-top 80px
			height 100%

	&__down
		display block
		position absolute
		bottom 10px
		left 0
		right 0
		margin auto
		width 100px
		height 100px
		background transparent url('./assets/img/arrow-down-sign-to-navigate.png') center center no-repeat
		background-size 40px
		z-index 2
	
	&__bg-img
		position absolute
		right 0
		left 0 
		top 0
		margin auto
		max-width 100%
		z-index -1
		transform: scale(1.1);

		animation-name: scale-bg
		animation-duration:60s;
		animation-delay:1s;
		animation-iteration-count:infinite;

		@media $tablet
			max-width inherit
			height 100%
		@media $mobile
			max-width inherit
			height 100%

		&--blur
			min-width 100%
			//margin-left -10%
			//margin-top -10%
			-webkit-filter blur(25px); /* Safari */
			filter blur(25px)

	&__logo
		cursor pointer
		padding 0
		margin 0
		margin-left 0px
		font-weight 400
		font-family 'Arial'
		text-transform uppercase
		display block
		width 1000px
		height 180px
		background transparent url('./assets/img/logo.svg') left 0 no-repeat
		background-size auto 253px
		@media $desktop-tablet
			background-size auto 223px
			background-position: top;
			height 220px
			width: 100% !important
			background-size: 99% auto;
		@media $tablet
			height 180px
		@media $mobile
			background-position top
			width: 100% !important
			background-size: 99% auto
			height 130px

	&__info
		text-align right  !important
		font-family sans-serif
		font-size 22px
		text-transform uppercase
		margin 0
		letter-spacing 1.5px
		padding 0 0 5px 0
		margin-right 10px !important
		letter-spacing 8px
		margin-bottom -29px !important
		@media $mobile
			margin-bottom auto !important
			text-align center !important


	&__info
	&__logo
	&__menu
	&__link
		text-align left
		color white
		position relative
		z-index 1
		width 100%

	&__menu
		cursor default
		padding-top 5px
		@media $mobile
			position absolute
			top 5px
			left 0px
			text-align center

	&__link
		margin 0px 40px 0px 0px
		font-size 18px
		color white
		text-transform uppercase
		font-weight 400

		@media $mobile
			font-size 13px
			margin 0 5px
			display inline

		&:hover
		&:active
		&:focus
			border-bottom 1px solid white

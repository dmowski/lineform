.services 
	height auto
	overflow hidden
	width 80%
	margin 0 0 100px 115px
	padding-top 80px
	@media $tablet
		margin 0 0 0 25px

	@media $mobile
		margin 0 0 0 25px

	li 
		margin 10px 0

	&__part
		width 40%
		float left
		margin 0 10% 0 0
		padding 5px 
		@media $tablet
			width 80%
		@media $mobile
			width 100%

	&__title
		font-size 42px
		color #222
		@media $mobile
			font-size 32px

	&__title-block
		font-size 22px
		color #333
		font-weight 600


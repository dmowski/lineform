.edit-text-block
	position fixed
	width 1000px
	height auto
	max-height 340px
	background #fff
	top 0
	bottom 0
	left 0 
	right 0
	margin auto
	box-shadow: 0 0 0 5000px rgba(black, 0.2)
	z-index 99999999999999
	
	.edit-text-block__main
		padding 20px
	.edit-text-block__container
		width 100%
		overflow hidden
	.edit-text-block__part
		border-bottom 1px solid #c2c2c2
		margin-bottom 20px
		padding-top 5px
		background rgba(0,0,0,0.05)
	textarea
		width 100%
		height 100px
		margin-bottom 20px
	input
		width 100%
		margin-bottom 20px
		
	.button
		margin-bottom 5px
		float left
		
	.button--big
		max-width: 700px;

	&__close
		position absolute
		top 0
		right 0
		font-size 32px
		font-weight 500
		padding 0 8px 0 0
	
	&__hide
		display none

.admin-project-button
	margin 10px auto
	display block
	max-width 800px

.add-btn-container
	width 1000px
	float left
	margin 10px
	background-color #f9f9f9
	margin-left calc(50% - 500px)
	overflow hidden
	padding 20px
	border: 1px solid #c2c2c2
	.button
		float left

.content-for-admin
	p:hover
	h1:hover
	h2:hover
	h3:hover
	h4:hover
	h5:hover
	h6:hover
	img:hover
		box-shadow 0 0 10px rgba(red, 0.2)
		cursor pointer